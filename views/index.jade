extends layout
block content
  div(class='navbar navbar-fixed-top')
    .navbar-inner
      .container
        a(class='btn btn-navbar', data-toggle='collapse', data-target='.nav-collapse')
          span(class='icon-bar')
          span(class='icon-bar')
          span(class='icon-bar')
        a(class='brand', href='/') HartfordJS
        .nav-collapse
          p(class='navbar-text pull-right')
            a(href='#loginModal', role='button', data-toggle='modal')
              img(src='/img/sits_small.png', alt='Sign in through Steam')
          ul(class='nav')
            li(class='active')
              a(href='/') Home
            li
              a(href='/') About
  br
  br
  br              
  .container-fluid
    .row-fluid
      .span3
        div(class='well sidebar-nav')
          ul(id='exampleList', class='nav nav-list')
            li(class='nav-header') Examples
            each game in games
              li 
                a(href='/')= game.gameName
      .span9
        .hero-unit
          h1 Hartford JS
          p Welcome #{user}
  div(id='loginModal', class='modal hide fade', tabindex='-1', role='dialog', aria-labelledby='loginModalLabel', aria-hidden='true')
    form#openid(action='/auth/openid')
      .modal-header
        button(type='button', class='close', data-dismiss='modal', aria-hidden='true') x
        h3 Sign In
      .modal-body
          fieldset
            label OpenID Steam Url
            input(type='text', class='input-xxlarge', name='openid_identifier', value='http://steamcommunity.com/openid/id/<steamid>')
            span(class='help-block') Replace &lt;steamid&gt; with your steamid
            input(type='submit', class='btn btn-primary', value='Login')