<% layout('layout') -%>
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container"><a data-toggle="collapse" data-target=".nav-collapse" class="btn btn-navbar"><span
                class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></a><a href="/"
                                                                                                           class="brand">HartfordJS</a>

            <div class="nav-collapse"><p class="navbar-text pull-right"><a href="#loginModal" role="button"
                                                                           data-toggle="modal"><img
                    src="/img/sits_small.png" alt="Sign in through Steam"></a></p>
                <ul class="nav">
                    <li class="active"><a href="/">Home</a></li>
                    <li><a href="/">About</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<br><br><br>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span3">
            <div class="well sidebar-nav">
                <ul id="exampleList" class="nav nav-list">
                    <li class="nav-header">Examples</li>
                    <% for(var i=0; i<games.length; i++) {%>
                    <li><%= games[i].gameName %></li>
                    <% } %>
                </ul>
            </div>
        </div>
        <div class="span9">
            <div class="hero-unit"><h1>Hartford JS</h1>

                <p>Welcome <%=user%></p></div>
        </div>
    </div>
</div>
<div id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true"
     class="modal hide fade">
    <form id="openid" action="/auth/openid">
        <div class="modal-header">
            <button type="button" data-dismiss="modal" aria-hidden="true" class="close">x</button>
            <h3>Sign In</h3></div>
        <div class="modal-body">
            <fieldset>
                <label>OpenID Steam Url</label>
                <input type="text" name="openid_identifier"
                       value="http://steamcommunity.com/openid/id/&lt;steamid&gt;"
                       class="input-xxlarge"><span
                    class="help-block">Replace &lt;steamid&gt; with your steamid</span><input
                    type="submit" value="Login" class="btn btn-primary"></fieldset>
        </div>
    </form>
</div>