<% layout('layout') -%>
<% if(!user) {%>
  <div class="mainArea backImg">
    <div class="row-fluid show-grid">
        <div class="span4 offset4">
            <img id="logo" src="../img/onwhite.png" class="img-rounded"/>
        </div>
    </div>
    <div class="row-fluid show-grid">
        <div class="span6 offset3">
            <h4>Find out where your friends and the games they own on steam meet!</h4>
            <p>
                We have an
                <a class="btn btn-mini btn-success" href="/party/show/509fea579626e9601b000001">example</a> or
                <a class="btn btn-mini btn-success" href="/party/show/50a0257a4d1cf75c10000001">two</a>
                for you to check out!
            </p>
        </div>
    </div>
    <div class="row-fluid show-grid">
        <div class="span4 offset4">
            <a class="btn btn-large btn btn-primary" href="/login">Sign in with Steam</a>
            <p class="muted">*Only public profiles.</p>
        </div>
    </div>
  </div>
<% } else { %>
<div class="row-fluid show-grid">
<div class="span4 offset4">
  <h1>Your Parties</h1>

  <ul id="partyList">

      <% for (var i = 0; i < parties.length; i++) { %>
      <li><a href="/party/show/<%= parties[i]._id %>"><%= parties[i].name || parties[i]._id %></a></li>
      <% } %>

  </ul>

  <a href="/party/new">Create a Party</a>
  </div>
  </div>
<% } %>